<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
</head>
<body>

    <%- include('../../partials/header'); %>

    <main class="container">
        <section class="content">
            <h1 class="mt-4 mb-3">Pollutant</h1>
            <form class="d-flex">
                <div class="form-group px-2 flex-grow-1">
                    <div class="input-group input-group-sm">
                        <span class="input-group-text" id="inputGroup-sizing-sm">Pollutant name</span>
                        <input type="text" class="form-control" aria-describedby="inputGroup-sizing-sm" name="pollutant_name"
                            autocomplete="off" value="<%=query.pollutant_name %>">
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-info btn-sm">Search</button>
                <a href="/pollutants" class="btn btn-outline-danger btn-sm mx-2">Clear</a>
            </form>
            <div class="box box-primary" style="margin:5px;padding:5px;">
                <div class="box-body">
                    <% if (pollutants.length===0) { %>
                        <p class="text-center fs-3">Pollutants list is empty!</p>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Pollutant Code</th>
                                        <th>Pollutant Name</th>
                                        <th>GDK, мг/м^3</th>
                                        <th>Danger class</th>
                                        <th>Tax rate, грн</th>
                                        <th>Operations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% pollutants.forEach(function(pollutant) { %>
                                        <tr>
                                            <td>
                                                <%= pollutant.pollutant_code %>
                                            </td>
                                            <td>
                                                <%= pollutant.pollutant_name %>
                                            </td>
                                            <td>
                                                <%= pollutant.gdk %>
                                            </td>
                                            <td>
                                                <%= pollutant.danger_class %>
                                            </td>
                                            <td>
                                                <%= pollutant.tax_rate %>
                                            </td>
                                            <td>
                                                <a href="/pollutants/edit/<%= pollutant.pollutant_code %>">Edit</a>
                                                <a 
                                                    onclick="return confirm('Are you sure you want to delete <%= pollutant.pollutant_code %> pollutant?')" 
                                                    href="/pollutants/delete/<%= pollutant.pollutant_code %>">Delete
                                                </a>
                                            </td>
                                        </tr>
                                        <% }); %>
                
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </section>
    </main>

    <%- include('../../partials/footer'); %>
    

</body>

</html>