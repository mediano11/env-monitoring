<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
</head>

<body>
    
    <%- include('../../partials/header'); %>

    <main class="container">
    
        <div class="card">
            <h1 class="card-header">
                <%= pollutant.pollutant_name %> | Edit
            </h1>
            <div class="card-body">
                <form action="/pollutants/update/<%= pollutant.pollutant_code %> " method="post">
                    <div class="form-group">
                        <label>Name:</label>
                        <input type="text" class="form-control" name="pollutant_name" value="<%= pollutant.pollutant_name %>" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <label>GDK:</label>
                        <input type="number" min="0" max="999" step="any" class="form-control" name="gdk" value="<%= pollutant.gdk %>" autocomplete="off">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn btn-info mt-3" value="Save" />
                    </div>
                </form>
            </div>
        </div>
    </main>

    <%- include('../../partials/footer'); %>

</body>

</html>