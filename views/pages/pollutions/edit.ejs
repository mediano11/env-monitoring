<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
</head>

<body>

    <%- include('../../partials/header'); %>

        <main class="container">

            <div class="card">
                <h1 class="card-header">
                    Pollution â„–<%= pollution.pollution_id %> | Edit
                </h1>
                <div class="card-body">
                    <form action="/pollutions/update/<%= pollution.pollution_id %>" method="post">
                        <div class="form-group">
                            <label class="my-1 mr-2" for="object_id">Pollutant name</label>
                            <select class="custom-select my-1 mr-sm-2 form-control" id="object_id" name="object_id">
                                <option value="<%= pollution.object_id %>" selected><%= pollution.object_name %></option>
                                <% objects.forEach(function(object) { %>
                                    <option value="<%= object.object_id %>">
                                        <%= object.name %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label class="my-1 mr-2" for="pollutant_code">Pollutant name</label>
                            <select class="custom-select my-1 mr-sm-2 form-control" id="pollutant_code" name="pollutant_code">
                                <option value="<%= pollution.pollutant_code %>" selected><%= pollution.pollutant_name %></option>
                                <% pollutants.forEach(function(pollutant) { %>
                                    <option value="<%= pollutant.pollutant_code %>">
                                        <%= pollutant.pollutant_name %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Pollutant value:</label>
                            <input type="number" min="0" max="9999" step="any" class="form-control" name="pollutant_value" value="<%= pollution.pollutant_value %>" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <label>Year:</label>
                            <input type="number" min="1900" max="2099" step="1" value="2023" class="form-control" name="date" value="<%= pollution.date %>" autocomplete="off">
                        </div>
                        <div class="form-group">
                            <input type="submit" class="btn btn-info mt-3" value="Save" />
                        </div>
                    </form>
                </div>
            </div>
        </main>

        <%- include('../../partials/footer'); %>

</body>

</html>